<h2>New Movie</h2>

<form action="/movies/" method="POST">

    <label> Title:
        <input type="text" name="title"/>
    </label>

    <label> genre:
        <input type="text" name="genre"/>
    </label>
    
    <label> Plot:
        <input type="text" name="plot"/>
    </label>

    <label> Cast:<br>
    <select name="cast">
      {{#each celebrity}}
  
      <option name="cast"value="{{this._id}}">{{this.name}}</option>
  
      {{/each}}
    </select>

    <button type="submit">Add Movie</button>

</form>